{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://evolverse.io/schemas/enft-artifact.schema.json",
  "title": "ENFT Artifact Schema",
  "description": "Schema for EV0L Enhanced NFT (ENFT) artifacts",
  "type": "object",
  "required": [
    "enft_id",
    "name",
    "description",
    "type",
    "tiers",
    "material",
    "design",
    "policies",
    "metadata"
  ],
  "properties": {
    "enft_id": {
      "type": "string",
      "pattern": "^ENFT-[0-9]{4}$",
      "description": "Unique ENFT identifier in format ENFT-XXXX"
    },
    "name": {
      "type": "string",
      "description": "Name of the ENFT artifact"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the artifact"
    },
    "tagline": {
      "type": "string",
      "description": "Marketing tagline or slogan"
    },
    "type": {
      "type": "string",
      "enum": ["commemorative_plate", "wearable", "tool", "property", "currency", "experience"],
      "description": "Category of the ENFT artifact"
    },
    "tiers": {
      "type": "array",
      "description": "Different rarity tiers for this artifact",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["tier_name", "edition_count", "tier_type"],
        "properties": {
          "tier_name": {
            "type": "string",
            "description": "Name of the tier"
          },
          "tier_type": {
            "type": "string",
            "enum": ["Public", "Elite", "God_Tier"],
            "description": "Type classification of the tier"
          },
          "edition_count": {
            "type": ["integer", "string"],
            "description": "Number of editions in this tier (can be number or '1-of-1')"
          },
          "description": {
            "type": "string",
            "description": "Description of this tier"
          },
          "bundle": {
            "type": "string",
            "description": "Bundle included with this tier"
          }
        }
      }
    },
    "material": {
      "type": "object",
      "description": "Material specifications",
      "required": ["primary_material"],
      "properties": {
        "primary_material": {
          "type": "string",
          "description": "Primary material used"
        },
        "special_properties": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Special properties of the material"
        }
      }
    },
    "design": {
      "type": "object",
      "description": "Design specifications",
      "required": ["elements"],
      "properties": {
        "elements": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Design elements included"
        },
        "signature": {
          "type": "string",
          "description": "Signature or mark included"
        }
      }
    },
    "policies": {
      "type": "object",
      "description": "Core ENFT policies compliance",
      "required": ["kids_first", "sabbath_safe", "no_dark_patterns"],
      "properties": {
        "kids_first": {
          "type": "boolean",
          "const": true,
          "description": "Must be family-friendly"
        },
        "sabbath_safe": {
          "type": "boolean",
          "const": true,
          "description": "Must respect rest and spiritual practices"
        },
        "no_dark_patterns": {
          "type": "boolean",
          "const": true,
          "description": "Must not use manipulative design"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "creator": {
          "type": "string"
        },
        "created_date": {
          "type": "string",
          "format": "date"
        },
        "division": {
          "type": "string"
        },
        "project": {
          "type": "string"
        }
      }
    }
  }
}
