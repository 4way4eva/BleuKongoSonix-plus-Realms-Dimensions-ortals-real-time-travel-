{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://evol.enft/schemas/ENFT_BUNDLE.v1.json",
  "title": "ENFT Bundle Schema v1",
  "description": "Schema for EV0L ENFT artifact bundles",
  "type": "object",
  "required": [
    "schema",
    "bundle_id",
    "artifacts"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "EV0L/ENFT_BUNDLE.v1"
    },
    "bundle_id": {
      "type": "string",
      "pattern": "^BNDL-[0-9]{4,}$"
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["artifact_id", "title"],
        "properties": {
          "artifact_id": {
            "type": "string",
            "pattern": "^ENFT-[0-9]{4,}$"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "school_tag": {
            "type": "string"
          },
          "realm_tag": {
            "type": "string"
          },
          "route_key_xx_yy_zz": {
            "type": "string"
          },
          "source_csv_ref": {
            "type": "string"
          },
          "issuance": {
            "type": "object",
            "properties": {
              "bleu_bill_code": {
                "type": "string",
                "enum": ["ROYAL_BLEU", "ARCHIVE_BLEU", "TRANSPARENCY_BLEU", "SKYY_BLEU"]
              },
              "pink_bill_code": {
                "type": "string",
                "enum": ["SKYY_BLEU", "ROSE_BLEU"]
              }
            }
          }
        }
      }
    }
  }
}
