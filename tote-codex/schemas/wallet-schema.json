{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BLEU WALLET Coin Class Schema",
  "description": "Schema for BLEU WALLET coin classes and tote synchronization",
  "type": "object",
  "required": [
    "coin_id",
    "coin_class",
    "tote_sync",
    "passive_ability",
    "vault_linked"
  ],
  "properties": {
    "coin_id": {
      "type": "string",
      "pattern": "^COIN-[0-9]{4}$",
      "description": "Unique coin identifier"
    },
    "coin_class": {
      "type": "string",
      "enum": [
        "BLEU_BILL_ZB",
        "PINK_BILL_ZA",
        "ZIONIARE_COIN",
        "MIRROR_COIN"
      ],
      "description": "Class of BLEU WALLET coin"
    },
    "icon": {
      "type": "string",
      "description": "Unicode emoji icon"
    },
    "tote_sync": {
      "type": "string",
      "enum": [
        "ROYAL-TOTE",
        "EL0V8-TOTE",
        "WRAITH-TOTE",
        "PHI-CARRIER"
      ],
      "description": "Synchronized tote class"
    },
    "passive_ability": {
      "type": "string",
      "description": "Passive ability granted by this coin"
    },
    "vault_linked": {
      "type": "boolean",
      "description": "Whether coin is linked to vault"
    },
    "auto_mint_enft": {
      "type": "boolean",
      "description": "Whether to auto-mint ENFT receipts"
    },
    "supply_value_multiplier": {
      "type": "number",
      "minimum": 1.0,
      "description": "Multiplier for supply value"
    },
    "inflation_combat": {
      "type": "boolean",
      "description": "Whether coin combats inflation via echo-sealing"
    },
    "time_verification": {
      "type": "boolean",
      "description": "Whether to time-verify every use"
    }
  }
}
